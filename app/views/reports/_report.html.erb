<div id="<%= dom_id report %>">
  <p>
    <strong><%= Report.human_attribute_name(:date) %>:</strong>
    <%= i18n_localize_time(report.created_at, 'Tokyo') %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:title) %>:</strong>
    <%= report.title %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:body) %>:</strong>
    <%= report.body %>
  </p>

</div>
